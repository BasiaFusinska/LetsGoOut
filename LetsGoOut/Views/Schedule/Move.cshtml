@model LetsGoOut.Domain.DTOs.MoveActivityModel
@{
    ViewBag.Title = "Move";
    var offsets = new List<SelectListItem>
    {
        new SelectListItem {Value = "1", Text = "30 min"},
        new SelectListItem {Value="2", Text = "1 h"},
        new SelectListItem {Value="4", Text = "2 h"}
    };

}

<h2>Activity Move</h2>

@using (Html.BeginForm("Move", "Schedule", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.ActivityId);

    <div class="form-group">
        @Html.LabelFor(model => model.Offset, "Move activity on", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.Offset, offsets, new { @class = "form-control" })
        </div>
    </div>

       <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Move" class="btn btn-default">
        </div>
    </div>
}

